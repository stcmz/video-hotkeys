{
  "name": "video_hotkeys",
  "description": "Enable YouTube-like hotkey experience for Bilibili, PangziTV, iQiyi, Youku and Tencent video.",
  "version": "3.2.1",
  "private": true,
  "author": "Maozi Chen",
  "sideEffects": false,
  "scripts": {
    "clean": "rm-cli -r dist",
    "prebuild": "npm run clean",
    "build:content": "cross-env NODE_ENV=production TS_NODE_PROJECT=tsconfig.webpack.json webpack",
    "build": "npm-run-all build:*",
    "prewatch": "npm run clean",
    "watch:content": "cross-env NODE_ENV=development TS_NODE_PROJECT=tsconfig.webpack.json webpack -w",
    "watch": "npm-run-all --parallel watch:*",
    "zip": "bestzip extension.zip dist/*"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^6.4.1",
    "@types/node": "^14.14.37",
    "@types/webpack": "^5.28.0",
    "bestzip": "^2.2.0",
    "copy-webpack-plugin": "^8.1.1",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "rm-cli": "^1.4.2",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0"
  }
}
